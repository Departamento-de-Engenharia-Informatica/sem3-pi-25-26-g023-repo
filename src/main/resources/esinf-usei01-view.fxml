<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" fitToHeight="true" styleClass="content-pane" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.UI.gui.views.Usei01Controller">
    <content>
        <VBox styleClass="view-container" spacing="20.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <Label styleClass="view-title" text="Unload Wagons [USEI01]" />
            <Label styleClass="view-subtitle" text="Execute the wagon unloading operation in real-time." />

            <VBox fx:id="optionsContainer" spacing="10.0">
                <children>
                    <Label styleClass="input-label" text="Execution Options:" />
                    <HBox spacing="10.0">
                        <Button onAction="#handleUnloadAll" styleClass="action-button" text="1. Unload ALL Wagons" />
                        <Button onAction="#handleShowManualSelection" styleClass="sidebar-button" text="2. Select Wagons Manually" />
                    </HBox>
                </children>
            </VBox>

            <VBox fx:id="selectionContainer" managed="false" visible="false" spacing="10.0">
                <children>
                    <Label styleClass="input-label" text="Manual Wagon Selection:" />
                    <Label styleClass="view-subtitle" text="Select one or more wagons from the list (use Ctrl-Click or Shift-Click)." />

                    <ListView fx:id="wagonListView" prefHeight="200.0" />

                    <HBox spacing="10.0">
                        <Button onAction="#handleProcessSelected" styleClass="action-button" text="Process Selected Wagons" />
                        <Button onAction="#handleCancelSelection" styleClass="sidebar-button" text="Cancel" />
                    </HBox>
                </children>
            </VBox>

            <VBox VBox.vgrow="ALWAYS" spacing="10.0">
                <children>
                    <Label styleClass="input-label" text="Results Console:" />
                    <TextArea fx:id="resultTextArea" editable="false" styleClass="result-area" VBox.vgrow="ALWAYS" />
                </children>
            </VBox>

        </VBox>
    </content>
</ScrollPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" styleClass="content-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.UI.gui.views.Usei11Controller">
    <content>
        <VBox spacing="20.0" styleClass="view-container">
            <padding>
                <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
            </padding>

            <VBox spacing="5.0">
                <Label styleClass="view-title" text="Network Connectivity (USEI11)" />
                <Label styleClass="view-subtitle" text="Analyze connected components and subgraph connectivity." />
            </VBox>

            <Separator styleClass="separator" />

            <HBox spacing="20.0" alignment="CENTER_LEFT">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS" maxWidth="400.0">
                    <Label text="Select Station (Optional - Leave empty for Global check):" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="stationCombo" promptText="Choose a station..." maxWidth="Infinity" />
                </VBox>

                <Button text="Analyze Connectivity" onAction="#handleAnalyzeNetwork"
                        styleClass="button-primary" prefHeight="35.0" />

                <Button text="Clear" onAction="#handleClear" styleClass="button" />
            </HBox>

            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                <Label text="Analysis Results:" styleClass="section-title" />
                <TextArea fx:id="resultArea" editable="false" styleClass="result-area" VBox.vgrow="ALWAYS" wrapText="true" />
            </VBox>

            <HBox alignment="CENTER_RIGHT">
                <Label fx:id="statusLabel" styleClass="status-label" text="Ready." />
            </HBox>
        </VBox>
    </content>
</ScrollPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="view-container" stylesheets="style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.UI.gui.views.Usei04Controller">
    <top>
        <VBox>
            <children>
                <Label text="USEI04: Calculate Pick Path Sequencing" styleClass="view-title" />
                <Label fx:id="lblStatus" styleClass="status-label" text="Ready to calculate. (Requires USEI03 to be run)">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" />
            </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnCalculate" mnemonicParsing="false" onAction="#handleCalculatePaths" text="Calculate All Picking Paths" styleClass="button-primary" />

                <Label text="Strategy A (Deterministic Sweep)" styleClass="section-title" />
                <TextArea fx:id="txtResultA" editable="false" prefHeight="180.0" styleClass="result-area" VBox.vgrow="ALWAYS" />

                <Label text="Strategy B (Nearest Neighbour)" styleClass="section-title">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <TextArea fx:id="txtResultB" editable="false" prefHeight="180.0" styleClass="result-area" VBox.vgrow="ALWAYS" />

            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
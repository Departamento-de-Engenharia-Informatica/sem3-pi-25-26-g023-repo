<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.UI.gui.views.TravelTimeGUIController">
    <children>
        <VBox layoutX="33.0" layoutY="28.0" spacing="15.0" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <Label text="USLP03 - Calcular Tempo de Viagem">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <Label text="1. Selecione a Estação de Partida:" />
                <ComboBox fx:id="departureStationCombo" prefWidth="400.0" promptText="Escolha uma estação..." />

                <Label text="2. Selecione a Estação de Chegada (só aparecem as conectadas):" />
                <ComboBox fx:id="arrivalStationCombo" disable="true" prefWidth="400.0" promptText="Escolha primeiro a partida..." />

                <Label text="3. Selecione a Locomotiva:" />
                <ComboBox fx:id="locomotiveCombo" prefWidth="400.0" promptText="Escolha uma locomotiva..." />

                <Button fx:id="calculateButton" onAction="#handleCalculateTravelTime" text="Calcular Rota Mais Rápida" />

                <Label text="Resultado:" />
                <TextArea fx:id="resultArea" editable="false" prefHeight="200.0" prefWidth="600.0" wrapText="true" />
            </children>
        </VBox>
    </children>
</AnchorPane>
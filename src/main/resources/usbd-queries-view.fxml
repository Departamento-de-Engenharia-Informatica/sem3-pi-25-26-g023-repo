<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.lang.String?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="header-label" text="BDDAD Queries - Specific Data Lookups" />

    <GridPane fx:id="inputGrid" hgap="15.0" vgap="15.0" style="-fx-border-color: #ccc; -fx-border-radius: 5; -fx-padding: 15;">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="USBD26: Wagons Not Used in Period" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <DatePicker fx:id="startDatePicker" promptText="Start Date (YYYY-MM-DD)" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <DatePicker fx:id="endDatePicker" promptText="End Date (YYYY-MM-DD)" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <Button text="Run USBD26" onAction="#runUSBD26" maxWidth="Infinity" styleClass="query-button" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2" />

        <Label text="USBD27: Universal Grain Wagons" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Button text="Run USBD27" onAction="#runUSBD27" maxWidth="Infinity" styleClass="query-button" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

        <Label text="USBD28: Multi-Gauge Locomotives" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="operatorIdField" promptText="Operator ID (e.g., MEDWAY)" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Button text="Run USBD28" onAction="#runUSBD28" maxWidth="Infinity" styleClass="query-button" GridPane.rowIndex="3" GridPane.columnIndex="2"/>

    </GridPane>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Results:" style="-fx-font-weight: bold;"/>
        <ProgressIndicator fx:id="progressIndicator" />
    </HBox>

    <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS" prefHeight="400.0" prefWidth="900.0">
        <placeholder>
            <Label text="Execute a query to see results." />
        </placeholder>
    </TableView>

</VBox>
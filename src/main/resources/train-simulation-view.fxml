<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pt.ipp.isep.dei.UI.gui.views.TrainSimulationController"
            prefHeight="700.0" prefWidth="1200.0"
            stylesheets="@style.css">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #1e1e1e; -fx-padding: 15; -fx-border-color: #333; -fx-border-width: 0 0 1 0;">
            <Label text="Simulador de Tráfego Ferroviário (USLP07 + Mapa)" textFill="#ffa500">
                <font><Font name="System Bold" size="20.0"/></font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <ProgressIndicator fx:id="progressIndicator" visible="false" prefHeight="25" prefWidth="25"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #252525;">

            <Label text="1. Selecione os Comboios para Simular:" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
            <TableView fx:id="trainTable" prefHeight="150.0" VBox.vgrow="NEVER">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" />
                    <TableColumn fx:id="departureColumn" text="Partida" />
                    <TableColumn fx:id="routeColumn" text="Rota / Locomotiva" />
                </columns>
            </TableView>
            <Button fx:id="selectAllButton" text="Selecionar Todos" onAction="#selectAllTrains" style="-fx-font-size: 10px;"/>

            <Label text="2. Resultados da Simulação:" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 10 0 0 0;"/>

            <SplitPane dividerPositions="0.4" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">

                <VBox spacing="5" style="-fx-padding: 0 10 0 0; -fx-background-color: #2b2b2b;">
                    <Label text="Relatório Técnico:" style="-fx-text-fill: #aaa; -fx-font-size: 11px;"/>
                    <TextArea fx:id="resultTextArea" editable="false"
                              style="-fx-font-family: 'Monospaced'; -fx-font-size: 11px;"
                              wrapText="false" VBox.vgrow="ALWAYS"/>
                </VBox>

                <VBox spacing="5" style="-fx-padding: 0 0 0 10; -fx-background-color: #1e1e1e;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Visualização Radar:" style="-fx-text-fill: #aaa; -fx-font-size: 11px;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="■ Linha Dupla" style="-fx-text-fill: DODGERBLUE; -fx-font-size: 10px;"/>
                        <Label text="■ Linha Simples" style="-fx-text-fill: ORANGE; -fx-font-size: 10px;"/>
                    </HBox>

                    <BorderPane fx:id="mapContainer" VBox.vgrow="ALWAYS"
                                style="-fx-border-color: #444; -fx-border-radius: 5; -fx-background-color: #000;"/>
                </VBox>

            </SplitPane>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15; -fx-background-color: #252525; -fx-border-color: #333; -fx-border-width: 1 0 0 0;">

            <Button fx:id="runButton" text="▶ INICIAR SIMULAÇÃO" onAction="#runSimulation"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 14px;"/>

            <Separator orientation="VERTICAL"/>

            <VBox spacing="5">
                <Label text="Velocidade da Animação:" textFill="#cccccc" style="-fx-font-size: 11px;"/>
                <Slider fx:id="speedSlider" min="10" max="1000" value="120" prefWidth="300" showTickLabels="true" showTickMarks="true"/>
            </VBox>

            <Label text="(Avanço Rápido)" textFill="#666" style="-fx-font-size: 10px;"/>
        </HBox>
    </bottom>

</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" styleClass="main-container" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.UI.gui.views.FreightPlannerController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label styleClass="header-label" text="USLP08 - Freight Route Planner" />

    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <VBox spacing="15" styleClass="panel" prefWidth="400">
            <Label styleClass="section-label" text="1. Route Configuration" />
            <HBox spacing="15">
                <RadioButton fx:id="rbSimple" selected="true" text="Simple Route (1 Load)" />
                <RadioButton fx:id="rbComplex" text="Complex Route (N Loads)" />
            </HBox>

            <Separator />

            <Label styleClass="section-label" text="2. Add Freight (System Orders)" />
            <VBox spacing="10">
                <VBox styleClass="input-group">
                    <Label text="Select Existing Order:" />
                    <ComboBox fx:id="orderCombo" promptText="Choose an order from system..." maxWidth="Infinity" />
                </VBox>

                <HBox spacing="10">
                    <VBox styleClass="input-group" HBox.hgrow="ALWAYS">
                        <Label text="Origin Station:" />
                        <ComboBox fx:id="originCombo" promptText="Select Origin" maxWidth="Infinity" />
                    </VBox>
                    <VBox styleClass="input-group" HBox.hgrow="ALWAYS">
                        <Label text="Destination Station:" />
                        <ComboBox fx:id="destCombo" promptText="Select Destination" maxWidth="Infinity" disable="true" />
                    </VBox>
                </HBox>

                <VBox styleClass="input-group">
                    <Label text="Weight (Tons) - Optional override:" />
                    <TextField fx:id="weightField" promptText="e.g. 15.5" />
                </VBox>

                <Button onAction="#addFreight" maxWidth="Infinity" styleClass="action-button" text="Add Freight to Trip" />
            </VBox>

            <Separator />

            <Label styleClass="section-label" text="3. Locomotive Start" />
            <VBox styleClass="input-group">
                <Label text="Starting Station:" />
                <ComboBox fx:id="startStationCombo" promptText="Where is the train?" maxWidth="Infinity" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <HBox spacing="10">
                <Button fx:id="calculateButton" onAction="#calculateRoute" maxWidth="Infinity" HBox.hgrow="ALWAYS" styleClass="success-button" text="Plan Optimal Route" />
                <Button onAction="#clearList" styleClass="danger-button" text="Clear" />
            </HBox>
        </VBox>

        <VBox spacing="15" HBox.hgrow="ALWAYS">
            <VBox spacing="5" VBox.vgrow="SOMETIMES">
                <Label styleClass="section-label" text="Pending Freight Requests:" />
                <ListView fx:id="freightList" prefHeight="150" />
            </VBox>

            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Label styleClass="section-label" text="Route Manifest &amp; Result:" />
                <TextArea fx:id="resultArea" editable="false" styleClass="result-text-area" VBox.vgrow="ALWAYS" wrapText="true" />
            </VBox>

            <Label fx:id="statusLabel" styleClass="status-bar" text="Ready" />
        </VBox>
    </HBox>
</VBox>
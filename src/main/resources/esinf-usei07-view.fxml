<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="view-container" stylesheets="style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.UI.gui.views.Usei07Controller">
    <top>
        <Label text="USEI07: Analyze 2D-Tree (Stations)" styleClass="view-title" BorderPane.alignment="CENTER_LEFT" />
    </top>
    <center>
        <VBox alignment="CENTER_LEFT" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnAnalyze" mnemonicParsing="false" onAction="#handleAnalyzeTree" text="Analyze 2D-Tree Structure" styleClass="button-primary" />
                <Label fx:id="lblStatus" styleClass="status-label" text="Ready to analyze." />
                <Label text="Tree Statistics:" styleClass="section-title" />
                <TextArea fx:id="txtResult" editable="false" prefHeight="400.0" prefWidth="750.0" styleClass="result-area" wrapText="false" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
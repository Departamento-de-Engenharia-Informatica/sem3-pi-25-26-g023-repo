<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="view-container" stylesheets="style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.UI.gui.views.Usei08Controller">
    <top>
        <Label text="USEI08: Spatial Queries (KD-Tree)" styleClass="view-title" BorderPane.alignment="CENTER_LEFT" />
    </top>
    <center>
        <SplitPane styleClass="split-pane-content" dividerPositions="0.4" BorderPane.alignment="CENTER">
            <items>
                <VBox styleClass="view-content-panel" minWidth="350.0" spacing="15.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label text="Define Geographical Area:" styleClass="section-title" />
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Minimum Latitude:" GridPane.rowIndex="0" />
                                <TextField fx:id="txtLatMin" promptText="-90.0 (Min)" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Maximum Latitude:" GridPane.rowIndex="1" />
                                <TextField fx:id="txtLatMax" promptText="90.0 (Max)" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Minimum Longitude:" GridPane.rowIndex="2" />
                                <TextField fx:id="txtLonMin" promptText="-180.0 (Min)" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Maximum Longitude:" GridPane.rowIndex="3" />
                                <TextField fx:id="txtLonMax" promptText="180.0 (Max)" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </children>
                        </GridPane>

                        <Label text="Additional Filters:" styleClass="section-title" />
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Country (Code):" GridPane.rowIndex="0" />
                                <TextField fx:id="txtCountry" promptText="Ex: PT, ES (leave empty = all)" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Is City Station?" GridPane.rowIndex="1" />
                                <ComboBox fx:id="cmbIsCity" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Is Main Station?" GridPane.rowIndex="2" />
                                <ComboBox fx:id="cmbIsMain" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>

                        <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#handleSearchArea" prefHeight="40.0" prefWidth="200.0" text="Search Area" styleClass="button-primary" />
                    </children>
                </VBox>

                <VBox styleClass="view-content-panel" spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Search Results:" styleClass="section-title" />
                                <Label fx:id="lblStatus" styleClass="status-label" text="Ready to search." />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="btnPrev" mnemonicParsing="false" onAction="#handlePrevPage" text="&lt; Previous" />
                                <Label fx:id="lblPaginationInfo" text="Page 0/0" />
                                <Button fx:id="btnNext" mnemonicParsing="false" onAction="#handleNextPage" text="Next &gt;" />
                            </children>
                        </HBox>

                        <TextArea fx:id="txtResult" editable="false" styleClass="result-area" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pt.ipp.isep.dei.UI.gui.views.TrainCRUDController"
            prefHeight="700.0" prefWidth="1000.0"
            stylesheets="@style.css">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15; -fx-border-color: #444; -fx-border-width: 0 0 1 0;">
            <Label text="Gestão de Comboios &amp; Composição" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ffa500;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Limpar Formulário" onAction="#clearForm"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.55" style="-fx-background-color: transparent;">

            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox spacing="20" style="-fx-padding: 20;">
                    <Label text="1. Dados da Viagem" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #4CAF50;"/>

                    <GridPane hgap="10" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="120"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Train ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="trainIdField" promptText="ex: TR-1001" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Operador:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="operatorIdCombo" maxWidth="Infinity" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Data Partida:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="departureDateField" maxWidth="Infinity" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Hora (HH:mm):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="departureTimeField" promptText="14:30:00" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Rota (ID):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="routeIdCombo" maxWidth="Infinity" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </GridPane>

                    <Separator/>

                    <Label text="2. Itinerário" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #4CAF50;"/>
                    <GridPane hgap="10" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="120"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Estação Partida:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="startFacilityCombo" maxWidth="Infinity" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Selecione primeiro..."/>

                        <Label text="Estação Chegada:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="endFacilityCombo" maxWidth="Infinity" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    </GridPane>

                    <Region VBox.vgrow="ALWAYS"/>

                    <Button fx:id="saveButton" text="GRAVAR COMBOIO"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 12 20;"
                            maxWidth="Infinity" onAction="#saveOrUpdateTrain"/>
                </VBox>
            </ScrollPane>

            <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #252525;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="3. Composição (Cockpit)" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #ffa500;"/>
                    <ProgressIndicator fx:id="progressIndicator" visible="false" prefHeight="20" prefWidth="20"/>
                </HBox>

                <Label text="Selecione material (ordenado por distância):" style="-fx-font-size: 11px; -fx-text-fill: #aaa;"/>

                <VBox spacing="5" style="-fx-padding: 10; -fx-border-color: #444; -fx-border-radius: 5;">
                    <Label text="Locomotiva (Obrigatório):" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cmbLocomotive" maxWidth="Infinity" promptText="Escolha a Locomotiva..."/>
                </VBox>

                <VBox spacing="5" VBox.vgrow="ALWAYS" style="-fx-padding: 10; -fx-border-color: #444; -fx-border-radius: 5;">
                    <Label text="Vagões (Min: 1):" style="-fx-font-weight: bold;"/>
                    <Label text="Use CTRL para selecionar múltiplos" style="-fx-font-size: 10px; -fx-text-fill: #888;"/>
                    <ListView fx:id="wagonListView" VBox.vgrow="ALWAYS"/>
                    <Label fx:id="lblWagonCount" text="Vagões: 0" alignment="CENTER_RIGHT" maxWidth="Infinity" style="-fx-font-size: 11px;"/>
                </VBox>

                <VBox spacing="10" style="-fx-background-color: #1a1a1a; -fx-padding: 15; -fx-background-radius: 5; -fx-border-color: #333; -fx-border-radius: 5;">
                    <Label text="Check-up Físico" style="-fx-text-fill: #2196F3; -fx-font-weight: bold;"/>

                    <GridPane hgap="10" vgap="5">
                        <Label text="Potência:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <ProgressBar fx:id="powerProgressBar" progress="0.0" maxWidth="Infinity" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label fx:id="lblPowerStatus" text="-" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>

                        <Label text="Comprimento:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ProgressBar fx:id="lengthProgressBar" progress="0.0" maxWidth="Infinity" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label fx:id="lblLengthStatus" text="-" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                    </GridPane>

                    <HBox>
                        <Label fx:id="lblTotalMass" text="Massa Total: 0t" style="-fx-font-size: 11px; -fx-text-fill: #ccc;"/>
                    </HBox>
                </VBox>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <VBox style="-fx-padding: 10; -fx-border-color: #444; -fx-border-width: 1 0 0 0;">
            <Label text="Histórico de Comboios" style="-fx-font-weight: bold; -fx-padding: 0 0 5 0;"/>
            <TableView fx:id="trainTable" prefHeight="150.0">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" />
                    <TableColumn fx:id="operatorColumn" text="Operador" />
                    <TableColumn fx:id="departureColumn" text="Partida" />
                    <TableColumn fx:id="startFacilityColumn" text="Origem" />
                    <TableColumn fx:id="endFacilityColumn" text="Destino" />
                    <TableColumn fx:id="routeColumn" text="Rota" />
                </columns>
            </TableView>
        </VBox>
    </bottom>

</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.UI.gui.views.Usei06Controller">
    <children>
        <VBox styleClass="view-container" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label styleClass="view-title" text="[USEI06] Advanced European Station Query" />
                <Separator />

                <VBox fx:id="step1Pane" spacing="10.0">
                    <children>
                        <Label styleClass="section-title" text="Step 1: Select Base Search (Time Zone)" />
                        <RadioButton fx:id="radioSingleTZ" mnemonicParsing="false" selected="true" text="By single Time Zone Group">
                            <toggleGroup>
                                <ToggleGroup fx:id="tzToggleGroup" />
                            </toggleGroup>
                        </RadioButton>
                        <TextField fx:id="fieldSingleTZ" maxWidth="200.0" promptText="e.g., CET, EET, WET/GMT" />

                        <RadioButton fx:id="radioWindowTZ" mnemonicParsing="false" text="By Time Zone Window" toggleGroup="$tzToggleGroup" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <TextField fx:id="fieldMinTZ" disable="true" maxWidth="150.0" promptText="e.g.,CET " />
                                <Label text="to" />
                                <TextField fx:id="fieldMaxTZ" disable="true" maxWidth="150.0" promptText="e.g., WET/GMT" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleStep1Search" styleClass="button-primary" text="Search" />
                                <Label fx:id="step1ErrorLabel" styleClass="error-label" textFill="RED" />
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>


                <VBox fx:id="resultsPane" managed="false" spacing="15.0" visible="false" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleResultsBack" text="Back to Time Zone Search" />
                                <Label fx:id="resultsStatusLabel" styleClass="status-label" />
                            </children>
                        </HBox>

                        <Label styleClass="section-title" text="Filter Results (Real-time)" />
                        <HBox styleClass="filter-bar" spacing="20.0">
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Country Code:" />
                                        <TextField fx:id="filterCountry" prefWidth="150.0" promptText="e.g., PT, ES, FR" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Is City?" />
                                        <ComboBox fx:id="filterIsCity" prefWidth="150.0" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Is Main Station?" />
                                        <ComboBox fx:id="filterIsMain" prefWidth="150.0" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Is Airport?" />
                                        <ComboBox fx:id="filterIsAirport" prefWidth="150.0" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <Label styleClass="section-title" text="Results" />
                        <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colStation" prefWidth="250.0" text="Station Name" />

                                <!-- Colunas curtas/booleanas centradas -->
                                <TableColumn fx:id="colCountry" prefWidth="75.0" text="Country" style="-fx-alignment: CENTER;" />
                                <TableColumn fx:id="colCity" prefWidth="75.0" text="City" style="-fx-alignment: CENTER;" />
                                <TableColumn fx:id="colMain" prefWidth="75.0" text="Main" style="-fx-alignment: CENTER;" />
                                <TableColumn fx:id="colAirport" prefWidth="75.0" text="Airport" style="-fx-alignment: CENTER;" />

                                <TableColumn fx:id="colTimeZone" prefWidth="120.0" text="Time Zone" />
                            </columns>

                            <!-- Adicionado para preencher o espaÃ§o -->
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>

                        </TableView>

                    </children>
                </VBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
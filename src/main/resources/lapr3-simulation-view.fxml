<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="header-label" text="USLP07 - Simulação Completa e Análise de Conflitos" />

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="Comboios Agendados (Selecione um ou mais):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label text="Opções de Simulação:" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <TableView fx:id="trainTable" GridPane.rowIndex="1" GridPane.columnIndex="0" prefHeight="250.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="ID" fx:id="idColumn" prefWidth="75.0" />
                <TableColumn text="Partida" fx:id="departureColumn" prefWidth="100.0" />
                <TableColumn text="Rota" fx:id="routeColumn" prefWidth="250.0" />
            </columns>
            <placeholder>
                <Label text="A carregar comboios..." />
            </placeholder>
        </TableView>

        <VBox spacing="10.0" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <Button fx:id="runButton" text="▶️ Executar Simulação (USLP07)" onAction="#runSimulation" maxWidth="Infinity" />
            <Label text="Nota: O agendamento considera o tempo real da ferrovia e resolve conflitos em via única." wrapText="true" style="-fx-font-style: italic;" />
            <ProgressIndicator fx:id="progressIndicator" visible="false" />
        </VBox>
    </GridPane>

    <Label text="Resultados da Simulação e Relatório de Conflitos:" />
    <TextArea fx:id="resultTextArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" prefHeight="400.0" />

</VBox>
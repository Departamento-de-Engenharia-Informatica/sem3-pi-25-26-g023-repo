<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.UI.gui.views.Usei14Controller">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="30.0" prefHeight="440.0" prefWidth="500.0" spacing="15.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0">
            <children>
                <Label text="USEI14 - Maximum Throughput Analysis" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label text="Select Source and Sink stations to calculate max flow." textFill="#7f8c8d" />

                <VBox alignment="CENTER_LEFT" spacing="5.0">
                    <children>
                        <Label text="Source Station:" />
                        <ComboBox fx:id="cmbSource" prefWidth="400.0" promptText="Choose source..." />
                    </children>
                </VBox>

                <VBox alignment="CENTER_LEFT" spacing="5.0">
                    <children>
                        <Label text="Sink Station:" />
                        <ComboBox fx:id="cmbSink" prefWidth="400.0" promptText="Choose destination..." />
                    </children>
                </VBox>

                <Button fx:id="btnCalculate" mnemonicParsing="false" onAction="#onCalculate" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Calculate Max Flow">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>

                <Label text="Results:" />
                <TextArea fx:id="txtResult" editable="false" prefHeight="150.0" prefWidth="500.0" style="-fx-font-family: 'Monospaced';" wrapText="true" />
            </children>
        </VBox>
    </children>
</AnchorPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" prefHeight="800.0" prefWidth="1200.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.UI.gui.MainController">

    <left>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" prefWidth="245.0" style="-fx-background-color: transparent; -fx-background: transparent; -fx-padding: 0;" BorderPane.alignment="CENTER">
            <content>
                <VBox styleClass="sidebar" prefWidth="230.0" minHeight="800.0">
                    <children>
                        <Label styleClass="sidebar-title" text="PI G023">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </Label>
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowDashboard" styleClass="sidebar-button" text="Dashboard" />

                        <Label styleClass="sidebar-section-title" text="Warehouse (S1)" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI01" styleClass="sidebar-button" text="[USEI01] Unload Wagons" />
                        <Button fx:id="btnUsei02" mnemonicParsing="false" onAction="#handleShowUSEI02" prefHeight="40.0" prefWidth="200.0" text="USEI02 - Allocate Orders" styleClass="sidebar-button" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI03" styleClass="sidebar-button" text="[USEI03] Pack Trolleys" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI04" styleClass="sidebar-button" text="[USEI04] Calculate Pick Path" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI05" styleClass="sidebar-button" text="[USEI05] Process Quarantine" />

                        <Label styleClass="sidebar-section-title" text="Railway Ops (S1/S2/S3)" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowSimulation" styleClass="sidebar-button" text="[USLP07/10] Full Simulation (S3)" />

                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSLP09" styleClass="sidebar-button" text="[USLP09] Assemble Train (S3)" />

                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSLP08" styleClass="sidebar-button" text="[USLP08] Freight Planner (S3)" />

                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI06" styleClass="sidebar-button" text="[USEI06] Station Index (S2)" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI07" styleClass="sidebar-button" text="[USEI07] Analyze 2D-Tree (S2)" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI08" styleClass="sidebar-button" text="[USEI08] Spatial Queries (S2)" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI09" styleClass="sidebar-button" text="[USEI09] Nearest-N Search (S2)" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI10" styleClass="sidebar-button" text="[USEI10] Radius Search (S2)" />

                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI12" styleClass="sidebar-button" text="[USEI12] Minimal Backbone (S3)" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI14" styleClass="sidebar-button" text="[USEI14] Max Throughput (S3)" />

                        <Label styleClass="sidebar-section-title" text="Database (S3)" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowBDDAD" styleClass="sidebar-button" text="BDDAD CRUD" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowBDADQueries" styleClass="sidebar-button" text="[USBD26-28] Query Reports" />

                        <Label text="" minHeight="50.0" />
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </left>

    <bottom>
        <HBox styleClass="statusbar" prefHeight="40.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="statusLabel" text="Status: Ready" />
            </children>
        </HBox>
    </bottom>

    <center>
        <StackPane>
            <children>
                <VBox>
                    <children>
                        <HBox fx:id="globalStatusHeader" styleClass="global-status-header" alignment="CENTER_LEFT" spacing="15.0">
                            <padding>
                                <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
                            </padding>
                            <children>
                                <Label text="Status:" styleClass="status-header-title" />
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <children>
                                        <Label text="Allocations (USEI02):" />
                                        <Label fx:id="statusAllocations" text="NOT-RUN" styleClass="status-not-run" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <children>
                                        <Label text="Picking Plan (USEI03):" />
                                        <Label fx:id="statusPicking" text="NOT-RUN" styleClass="status-not-run" />
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                        <AnchorPane fx:id="centerContentPane" styleClass="content-pane" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>

                <VBox fx:id="notificationPane" alignment="TOP_RIGHT" spacing="10.0" pickOnBounds="false" styleClass="notification-container">
                    <StackPane.alignment>TOP_RIGHT</StackPane.alignment>
                    <padding>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                    </padding>
                </VBox>

            </children>
        </StackPane>
    </center>
</BorderPane>
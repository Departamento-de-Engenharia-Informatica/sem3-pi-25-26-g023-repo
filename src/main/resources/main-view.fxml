<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" prefHeight="800.0" prefWidth="1200.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.UI.gui.MainController">
    <left>
        <VBox styleClass="sidebar" prefWidth="230.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="sidebar-title" text="PI G023">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>
                <Button maxWidth="1.7976931348623157E308" onAction="#handleShowDashboard" styleClass="sidebar-button" text="Dashboard" />
                <Label styleClass="sidebar-section-title" text="Warehouse (S1)" />
                <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI01" styleClass="sidebar-button" text="[USEI01] Unload Wagons" />

                <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI02" styleClass="sidebar-button" text="[USEI02] Allocate Orders" />

                <Button maxWidth="1.7976931348623157E308" onAction="#handleShowESINF" styleClass="sidebar-button" text="[USEI03] Pack Trolleys" />
                <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUSEI04" styleClass="sidebar-button" text="[USEI04] Calculate Pick Path" />
                <Button maxWidth="1.7976931348623157E308" onAction="#handleShowESINF" styleClass="sidebar-button" text="[USEI05] Process Quarantine" />
                <Label styleClass="sidebar-section-title" text="Railway Ops (S1/S2)" />
                <Button maxWidth="1.7976931348623157E308" onAction="#handleShowLAPR3" styleClass="sidebar-button" text="[USLP03] Travel Time (S1)" />
                <Button maxWidth="1.7976931348623157E308" onAction="#handleShowESINF" styleClass="sidebar-button" text="[USEI06] Station Index (S2)" />
                <Button maxWidth="1.7976931348623157E308" onAction="#handleShowESINF" styleClass="sidebar-button" text="[USEI08] Spatial Queries (S2)" />
                <Label styleClass="sidebar-section-title" text="Database (S3)" />
                <Button maxWidth="1.7976931348623157E308" onAction="#handleShowBDDAD" styleClass="sidebar-button" text="BDDAD Functions" />
            </children>
        </VBox>
    </left>

    <bottom>
        <HBox styleClass="statusbar" prefHeight="40.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="statusLabel" text="Status: Ready" />
            </children>
        </HBox>
    </bottom>

    <center>
        <VBox>
            <children>
                <HBox fx:id="globalStatusHeader" styleClass="global-status-header" alignment="CENTER_LEFT" spacing="15.0">
                    <padding>
                        <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
                    </padding>
                    <children>
                        <Label text="Status:" styleClass="status-header-title" />
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <children>
                                <Label text="Allocations (USEI02):" />
                                <Label fx:id="statusAllocations" text="NOT-RUN" styleClass="status-not-run" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <children>
                                <Label text="Picking Plan (USEI04):" />
                                <Label fx:id="statusPicking" text="NOT-RUN" styleClass="status-not-run" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <AnchorPane fx:id="centerContentPane" styleClass="content-pane" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </center>
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- O fx:controller liga este FXML à sua classe MainController.java -->
<BorderPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.UI.gui.MainController">
    <left>
        <!-- Painel de Navegação Lateral (Sidebar) -->
        <VBox styleClass="sidebar" prefWidth="220.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="sidebar-title" text="PI G023">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>
                <Button maxWidth="1.7976931348623157E308" onAction="#handleShowDashboard" styleClass="sidebar-button" text="Dashboard" />

                <!-- Apaguei os outros botões (ESINF, LAPR3) como você queria -->

            </children>
        </VBox>
    </left>
    <bottom>
        <!-- Barra de Status Inferior -->
        <HBox styleClass="statusbar" prefHeight="40.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="statusLabel" text="Status: Pronto" />
            </children>
        </HBox>
    </bottom>
    <center>
        <!--
          ESTA É A PARTE CRÍTICA QUE NÃO PODE APAGAR.
          O fx:id="centerContentPane" liga-se ao MainController.java
          É aqui que os outros ecrãs (como o dashboard) são carregados.
        -->
        <AnchorPane fx:id="centerContentPane" styleClass="content-pane" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>